                    </Button.RenderTransform>
                    <Button.Background>
                        <ImageBrush ImageSource="C:\Users\Farouq\source\repos\WpfApp4\Assets\DecreaseTemp.png"/>
                    </Button.Background>
                </Button>
                <Slider Name="WaterFlowVal"  HorizontalAlignment="Left" Margin="20,272,0,0" VerticalAlignment="Top" Width="380" Height="110" ValueChanged="Slider_ValueChanged">

                    <!--<Slider.LayoutTransform>
                        <ScaleTransform ScaleY="6"/>
                    </Slider.LayoutTransform>-->

                </Slider>
            </Grid>

            <Button Grid.Row="0" Grid.Column="0" Name="BackButton" Margin="10,0,480,0" BorderBrush="{x:Null}" Click="BackButton_Click">
                <Button.Background>
                    <ImageBrush ImageSource="C:\Users\Farouq\source\repos\WpfApp4\Assets\BackButton.png"/>
                </Button.Background>
            </Button>

            <TextBlock Grid.Column="1" Text="Atlantis" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="107.86" FontFamily="Perpetua" Foreground="#FFF5EFFF" FontWeight="Normal">
                <TextBlock.Background>
                    <SolidColorBrush Opacity="0.995"/>
                </TextBlock.Background>
            </TextBlock>
            <Label Grid.Column="2" VerticalAlignment="Top" x:Name="Time" Content="" Foreground="White" FontFamily="Perpetua" FontSize="62.51" Width="255" Margin="320,36,65,0"/>
        </Grid>

        <Grid Name="Main" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Name="Atlantis" Text="Atlantis" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="107.86" FontFamily="Perpetua" Foreground="#FFF5EFFF" FontWeight="Normal">
                <TextBlock.Background>
                    <SolidColorBrush Opacity="0.995"/>
                </TextBlock.Background>
            </TextBlock>



            <Grid Name="AddUser" Visibility="Collapsed" Grid.Row="1" Height="400" VerticalAlignment="Top" Margin="600,50,600,30">

                <Border Opacity="1" CornerRadius="15" BorderThickness="16" BorderBrush="#f5efff">
                    <Border Background="#000000" CornerRadius="20"/>
                </Border>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="130"/>
                        <RowDefinition/>
                        <RowDefinition Height="16"/>
                    </Grid.RowDefinitions>

                    <TextBlock Name="addBlock" Text="Enter Name here:" FontSize="65" Foreground="#f5efff"  FontFamily="Perpetua" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                    <TextBox Name="textReturn" Grid.ColumnSpan="2" Grid.Row="1" FontSize="85" TextAlignment="Center" FontFamily="Perpetua" Foreground="#f5efff" Background="Transparent" Width="520" Height="100" BorderBrush="#f5efff" AcceptsReturn="True"/>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="17"/>
