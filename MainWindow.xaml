                        </Grid.ColumnDefinitions>

                        <Button Content="Cancel" Grid.Column="1" Style="{DynamicResource buttonStyle}" Click="Button_Click_1"/>
                        <Button Content="Confirm" Grid.Column="2" Style="{DynamicResource buttonStyle}" Click="Button_Click"/>
                    </Grid>

                </Grid>
            </Grid>

            <Grid Name="normalGrid" Grid.Row ="1" Visibility="Visible">


                <ScrollViewer Name="UserScroll" 
                          HorizontalAlignment="Stretch" 
                          VerticalAlignment="Stretch" 
                          HorizontalScrollBarVisibility="Hidden" 
                          VerticalScrollBarVisibility="Disabled" 
                          ScrollViewer.PanningMode="HorizontalOnly"
                          Template="{DynamicResource ScrollViewerTemplate}">
                    <!--<ScrollViewer.Triggers>
                    <Trigger Property="Thumb.IsDragging" Value="False">
                        

                    </Trigger>
                </ScrollViewer.Triggers>-->

                    <Grid Name="UserProfiles" Margin="0,0,0,75">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width ="200"/>
                            <ColumnDefinition Width="507"/>
                            <ColumnDefinition Width="507"/>
                            <ColumnDefinition Width="507"/>
                            <ColumnDefinition Width ="200"/>
                        </Grid.ColumnDefinitions>


                        <Button Grid.Row="0" Grid.Column="1" x:Name ="NewUser" Click="NewUser_Click" Margin="0,0,0, 45">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="BorderBrush">
                                        <Setter.Value>
                                            <SolidColorBrush Color="#f5efff"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Width" Value="270"/>
                                    <Setter Property="Height" Value="270"/>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate>
                                    <Grid Margin="0,0,0,-100">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="270"/>
                                            <RowDefinition Height="90"/>
                                        </Grid.RowDefinitions>
                                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="8" CornerRadius="30">
                                            <TextBlock Foreground="#f5efff" Text= "+" FontFamily ="Perpetua" FontSize="200" HorizontalAlignment="Center" VerticalAlignment="Center" Height="270" Width="270" TextAlignment="Center" LineStackingStrategy="BlockLineHeight" LineHeight="275"/>
                                        </Border>

                                        <TextBlock Grid.Row="1" Foreground="#f5efff" Text="New User" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="75" FontFamily="Perpetua"/>
