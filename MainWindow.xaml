                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True"/>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate>
                            <Border
                            Background="{TemplateBinding Background}">
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.BorderBrush>
                        <SolidColorBrush Color="#FF1F1F1F" Opacity="0"/>
                    </Button.BorderBrush>
                    <Button.Background>
                        <ImageBrush ImageSource="C:\Users\Farouq\source\repos\WpfApp4\Assets\IncreaseTemp.png" Stretch="Fill"/>
                    </Button.Background>
                </Button>
                <Label x:Name="Temp" Content="°F" HorizontalAlignment="Left" Margin="108,678,0,0" VerticalAlignment="Top" Width="292" Height="132" FontSize="113.45" FontFamily="Perpetua" Foreground="#FFF5EFFF" RenderTransformOrigin="0.689,0.5"/>
