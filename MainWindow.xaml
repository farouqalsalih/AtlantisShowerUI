                                            <SolidColorBrush Color="#f5efff"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Width" Value="270"/>
                                    <Setter Property="Height" Value="270"/>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate>
                                    <Grid Margin="0,0,0,-100">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="270"/>
                                            <RowDefinition Height="90"/>
                                        </Grid.RowDefinitions>
                                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="8" CornerRadius="30">
                                            <TextBlock Foreground="#f5efff" FontFamily ="Perpetua" FontSize="100" HorizontalAlignment="Center" Height="270" Width="270" TextAlignment="Center" VerticalAlignment="Center" LineStackingStrategy="BlockLineHeight" LineHeight="225" Text="G"/>
                                        </Border>

