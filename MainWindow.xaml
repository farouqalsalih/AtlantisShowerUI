<Window x:Class="WpfApp3.MainWindow"
        x:Name="Derp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local ="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="MainWindow" Height="1080" Width="1920"
        Top="0"
        Left="0">


        <Window.Background>
        <ImageBrush ImageSource="C:\Users\Farouq\source\repos\WpfApp4\Assets\AdobeStock_317505836.jpeg" Opacity="0.6"/>
        </Window.Background>

        <Window.Resources>
        <ControlTemplate x:Key="SecondScrollViewerTemplate" TargetType="ScrollViewer">
            <Grid x:Name="Grid" Background="{TemplateBinding Background}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Rectangle x:Name="Corner" Grid.Column="1" Fill="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Grid.Row="1"/>
                <ScrollContentPresenter x:Name="PART_ScrollContentPresenter" CanContentScroll="{TemplateBinding CanContentScroll}" CanHorizontallyScroll="False" CanVerticallyScroll="False" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" Grid.Column="0" Margin="{TemplateBinding Padding}" Grid.Row="0"/>
                <ScrollBar Style="{DynamicResource SecondScroll}" x:Name="PART_HorizontalScrollBar" AutomationProperties.AutomationId="HorizontalScrollBar" Cursor="Arrow" Grid.Column="0" Maximum="{TemplateBinding ScrollableWidth}" Minimum="0" Orientation="Horizontal" Grid.Row="1" Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}" Value="{Binding HorizontalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" ViewportSize="{TemplateBinding ViewportWidth}"/>
            </Grid>
        </ControlTemplate>

        <Style x:Key="SecondScroll" TargetType="ScrollBar">

            <Setter Property="SnapsToDevicePixels"
                    Value="True"/>
            <Setter Property="OverridesDefaultStyle"
                    Value="True"/>

            <!--// Style Trigger //-->


            <Setter Property="Width"
                            Value="790"/>

            <Setter Property="Margin"
                    Value="0,-90,0,-10"/>
            <!--// Create a style template for the scrollbar //-->

            <Setter Property="Template"
                            Value="{DynamicResource SecondHorizontalScrollBar}"/>


        </Style>

        <!--// Template for the Scrollbar //-->

        <ControlTemplate x:Key="SecondHorizontalScrollBar"
                         TargetType="{x:Type ScrollBar}">

            <Grid>


                <!--// Border with a background //-->

                <Border 
                    CornerRadius="15"
                    Background="#BABCD0"
                    Margin="0,30,0,30"/>


                <!--// Track - Container for the element that indicates 
                           the position of the scrollbar //-->

                <Track
                    Name="PART_Track"
                    IsDirectionReversed="False">


                    <!--// Thumb - Control that can be dragged by the user //-->

                    <Track.Thumb>

                        <Thumb
                            
                            Style="{StaticResource ScrollViewer_Thumb}">

                        </Thumb>

                    </Track.Thumb>
                </Track>
            </Grid>

        </ControlTemplate>

        <Style TargetType="Slider">
            <Setter Property="SnapsToDevicePixels"
                    Value="True"/>
            <Setter Property="OverridesDefaultStyle"
                    Value ="True"/>
            <Setter Property="Template"
                    Value="{DynamicResource Slider}"/>
        </Style>

        <ControlTemplate x:Key="Slider"
                         TargetType="Slider">

            <Grid Margin="0,0,0,-31">

                <Border
                    BorderBrush="#F5EFFF"
                    BorderThickness="7"
                    CornerRadius="15"
                    Margin="0,20,8,35"
                    Background="#000000"
                    />

                <TextBlock Text="Water Flow" HorizontalAlignment="Center" FontSize="50" VerticalAlignment="Center" Foreground="#FFFFFF" FontFamily="Perpetua" Opacity=".75" Height="75"></TextBlock>

                <Track
                    Name="PART_Track"
                    IsDirectionReversed="False" Margin="-4,-11,0,0">

                    <Track.Thumb>
                        <Thumb
                            Style="{StaticResource ScrollBar_Thumb}">
                        </Thumb>
                    </Track.Thumb>
                </Track>
            </Grid>

        </ControlTemplate>
        <ControlTemplate x:Key="ScrollViewerTemplate" TargetType="ScrollViewer">
            <Grid x:Name="Grid" Background="{TemplateBinding Background}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Rectangle x:Name="Corner" Grid.Column="1" Fill="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Grid.Row="1"/>
                <ScrollContentPresenter x:Name="PART_ScrollContentPresenter" CanContentScroll="{TemplateBinding CanContentScroll}" CanHorizontallyScroll="False" CanVerticallyScroll="False" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" Grid.Column="0" Margin="{TemplateBinding Padding}" Grid.Row="0"/>
                <ScrollBar Style="{DynamicResource ScrollBarStyle}" x:Name="PART_HorizontalScrollBar" AutomationProperties.AutomationId="HorizontalScrollBar" Cursor="Arrow" Grid.Column="0" Maximum="{TemplateBinding ScrollableWidth}" Minimum="0" Orientation="Horizontal" Grid.Row="1" Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}" Value="{Binding HorizontalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" ViewportSize="{TemplateBinding ViewportWidth}"/>
            </Grid>
        </ControlTemplate>

            <Style x:Key="ScrollBarStyle" TargetType="ScrollBar">

                <Setter Property="SnapsToDevicePixels"
                    Value="True"/>
                <Setter Property="OverridesDefaultStyle"
                    Value="True"/>

                <!--// Style Trigger //-->


                <Setter Property="Width"
                    Value="900"/>

                <Setter Property="Margin"
                    Value="0,-90,0,0"/>
                <!--// Create a style template for the scrollbar //-->

                <Setter Property="Template"
                    Value="{DynamicResource HorizontalScrollBar}"/>


            </Style>

            <!--// Template for the Scrollbar //-->

            <ControlTemplate x:Key="HorizontalScrollBar"
                         TargetType="{x:Type ScrollBar}">

                <Grid>


                    <!--// Border with a background //-->

                    <Border 
                    CornerRadius="15"
                    Background="#BABCD0"
                    Margin="0,30,0,30"/>


                    <!--// Track - Container for the element that indicates 
                           the position of the scrollbar //-->

                    <Track
                    Name="PART_Track"
                    IsDirectionReversed="False">


                        <!--// Thumb - Control that can be dragged by the user //-->

                        <Track.Thumb>

                            <Thumb
                            
                            Style="{StaticResource ScrollViewer_Thumb}">

                            </Thumb>

                        </Track.Thumb>
                    </Track>
                </Grid>

            </ControlTemplate>

            <Style x:Key="newUserS" TargetType="Button">
                <Setter Property="BorderBrush">
                    <Setter.Value>
                        <SolidColorBrush Color="#f5efff"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Width" Value="270"/>
                <Setter Property="Height" Value="270"/>
                <Setter Property="Template" Value="{DynamicResource cButton}"/>

            </Style>

            <Style x:Key="buttonStyle" TargetType="Button">
                <Setter Property="BorderBrush" Value="#f5efff"/>
                <Setter Property="Width" Value="200"/>
                <Setter Property="Height" Value="100"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="6" CornerRadius="20">
                                <TextBlock Foreground="{TemplateBinding BorderBrush}" Text= "{TemplateBinding ContentControl.Content}"  Width="187" Height="80" LineStackingStrategy="BlockLineHeight" LineHeight="76" TextAlignment="Center" FontFamily ="Perpetua" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>


            <ControlTemplate x:Key="cButton" x:Name="cButton" TargetType="Button">
                <Grid Margin="0,0,0,-100">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="270"/>
                        <RowDefinition Height="90"/>
                    </Grid.RowDefinitions>
                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="8" CornerRadius="30">
                        <TextBlock x:Name="newU" Foreground="{TemplateBinding BorderBrush}" Text= "{Binding tTextC, ElementName=Derp}" FontFamily ="Perpetua" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center" Width="270" Height="270" LineStackingStrategy="BlockLineHeight" LineHeight="225" TextAlignment="Center"/>
                    </Border>

                    <TextBlock Grid.Row="1" Foreground="{TemplateBinding BorderBrush}" Text="{Binding tText, ElementName=Derp}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="75" FontFamily="Perpetua"/>
                </Grid>
            </ControlTemplate>
        </Window.Resources>


        <Grid>
            <!--<local:ActiveShower Visibility="Collapsed" x:Name="ActiveShower2"/>-->

