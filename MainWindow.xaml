                                    </Setter>
                                    <Setter Property="Width" Value="270"/>
                                    <Setter Property="Height" Value="270"/>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate>
                                    <Grid Margin="0,0,0,-100">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="270"/>
                                            <RowDefinition Height="90"/>
                                        </Grid.RowDefinitions>
                                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="8" CornerRadius="30">
                                            <Image Source="C:\Users\Farouq\source\repos\WpfApp4\Assets\Gear2.png"/>
                                        </Border>

                                        <TextBlock Grid.Row="1" Foreground="#f5efff" Text="Settings" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="75" FontFamily="Perpetua"/>
                                    </Grid>
                                </ControlTemplate>
                            </Button.Template>
